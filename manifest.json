{
    "manifest_version": 2,
    "name": "MEGA",
    "description": "Secure Cloud Storage and Chat",
    "version": "1.0.0",
    "content_security_policy": "script-src 'self' https://*.mega.co.nz https://*.mega.nz blob:; object-src 'self' https://*.mega.co.nz https://*.mega.nz;",
    "permissions": [
        "clipboardWrite",
        "unlimitedStorage",
        "https://mega.co.nz/",
        "https://mega.nz/",
        "wss://mega.nz/",
        "webRequest",
        "webRequestBlocking"
    ],
    "web_accessible_resources": ["mega/secure.html"],
    "homepage_url": "https://mega.nz/",
    "background": {
        "scripts": ["mega.js"]
    },
    "icons": {
        "16": "images/icon_16.png",
        "48": "images/icon_48.png",
        "128": "images/icon_128.png"
    },
    "browser_action": {
        "default_icon": {
            "16": "buttons/favicon-16.png",
            "32": "buttons/favicon-32.png",
            "64": "buttons/favicon-64.png"
        },
        "default_title": "MEGA"
    },
    "applications": {
        "gecko": {
            "id": "firefox@mega.co.nz",
            "strict_min_version": "52.0",
            "update_url": "https://mega.nz/firefox-web-extension-updates.json"
        }
    }
}